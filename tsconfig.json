{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es6"
    ],
    "types": [
      "reflect-metadata",
      "node",
      "jest"
    ],
    "baseUrl": ".",
    "paths": {
      "@configurer/*": [
        "src/*"
      ]
    },
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "declaration": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  }
}